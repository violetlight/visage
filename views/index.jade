extends layout

block content
  nav.navbar.navbar-inverse
    .container-fluid
      .btn-toolbar
        if user
          a.pull-left.btn.btn-info.btn-lg(href="/settings") Upload Image
          a.pull-left.btn.btn-info.btn-lg(href="/settings") Create Album

          a.pull-right.btn.btn-success.btn-lg(href="/logout") Log out
          a.pull-right.nav-link(href="/settings") #{user.username}
        else
          a.pull-right.btn.btn-success.btn-lg(href="/sign") Log in
  .container.panel-rounded
    .row
      .col-md-6.col-md-offset-3.text-center
        h1 #{images.length} images uploaded.
    .row
      .col-md-6.col-md-offset-3
        form.dropzone.dz-clickable#image-upload-form(action="/api/image")
